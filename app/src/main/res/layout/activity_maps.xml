<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_screen"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    map:layout_constraintEnd_toStartOf="parent"
    tools:context=".MapScreenActivity">


    <Button
        android:id="@+id/menu_btn"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_margin="20dp"
        android:background="@drawable/ic_menu_btn"
        app:backgroundTint="@null"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nextFocusUp="@id/order_panel"
        tools:context=".MapsActivity"></androidx.fragment.app.FragmentContainerView>
    <androidx.fragment.app.FragmentContainerView

        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/order_panel"
        android:name="step.android.taxi.OrderPanelFragment"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".OrderPanelFragment"
        tools:layout="@layout/fragment_order_panel">
    </androidx.fragment.app.FragmentContainerView>

</FrameLayout>

